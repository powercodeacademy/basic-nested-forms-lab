<%# render 'form', recipe: @recipe %>

<%= form_with model: @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %> <br />

  <%= f.fields_for :ingredients do |ingred| %>
    <%= ingred.label :name  %>
    <%= ingred.text_field :name %><br>

    <%= ingred.label :quantity %>
    <%= ingred.text_field :quantity %><br>
<% end %><br />

 <%= f.submit %>
<% end %>
